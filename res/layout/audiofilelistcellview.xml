<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="#FFFFFFFF"
	>

	<ImageView
		android:id="@+id/MusicIconImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
	/>

	<TextView
		android:id="@+id/VoiceRecordFileName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/MusicIconImage"
		android:textColor="#FF000000"
		android:textSize="15sp"
	/>

	<TextView
		android:id="@+id/VoiceRecordFileDate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/MusicIconImage"
		android:layout_below="@+id/VoiceRecordFileName"
		android:textColor="#FF000000"
	/>

	<TextView
		android:id="@+id/VoiceRecordFileLength"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/VoiceRecordFileName"
		android:textColor="#FF000000"
	/>

</RelativeLayout>